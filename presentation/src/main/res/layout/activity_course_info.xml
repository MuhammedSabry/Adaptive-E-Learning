<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".view.activity.CourseInfo">

    <ImageView
        android:id="@+id/courseBackground"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:scaleType="fitStart"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/course_instructor"
        tools:ignore="ContentDescription"
        tools:src="@drawable/bg2" />

    <Button
        android:id="@+id/watch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/courseBackground"
        android:layout_marginLeft="16dp"
        android:text="Watch"
        android:backgroundTint="@android:color/holo_red_dark"
        android:onClick="watchContent"/>

    <TextView
        android:id="@+id/courseName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_toRightOf="@id/courseBackground"
        android:layout_below="@id/watch"
        android:text="Math"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/detailedTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/courseBackground"
        android:layout_below="@id/courseName"
        android:layout_marginLeft="16dp"
        android:text="easy course"/>

    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/courseBackground"
        android:layout_marginTop="10dp"
        android:text="Description:"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/courseDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/description"
        android:layout_marginTop="5dp"
        android:text="description"/>

    <TextView
        android:id="@+id/creator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/courseDescription"
        android:layout_marginTop="10dp"
        android:text="Creator:"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/courseCreatorName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/creator"
        android:layout_marginTop="5dp"
        android:text="creator"/>
    <TextView
        android:id="@+id/courseCreatorEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/courseCreatorName"
        android:layout_marginTop="5dp"
        android:text="creator"/>

    <TextView
        android:id="@+id/content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/courseCreatorEmail"
        android:layout_marginTop="10dp"
        android:text="Content:"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/courseContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/content"
        android:layout_marginTop="5dp"
        android:text="content"/>



</RelativeLayout>