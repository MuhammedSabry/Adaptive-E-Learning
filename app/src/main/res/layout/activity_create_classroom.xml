<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:background="@color/background"
    android:gravity="center_vertical"
    android:orientation="vertical"
    tools:context="com.eng.asu.adaptivelearning.view.activity.CreateClassroomActivity">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/classroomNameTextInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        android:theme="@style/TextStyle">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/classroomName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Classroom Name" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/classroomCategoryTextInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:theme="@style/TextStyle">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/classroomCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Classroom Category" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/createClass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:text="CREATE"
        android:theme="@style/buttonStyle" />
</LinearLayout>